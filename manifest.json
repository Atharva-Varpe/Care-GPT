{
  "manifest_version": 3,
  "name": "Prompt Counter",
  "version": "1.0",
  "permissions": ["identity", "storage", "scripting"],
  "oauth2": {
    "client_id": "494309029846-fvv7s7nh7dv2gbi2o2jr3tc3e9es26tm.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.profile"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/"], 
      "js": [ "chart.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["chart.min.js", "callback.html"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/logo2.png"
  }
}
